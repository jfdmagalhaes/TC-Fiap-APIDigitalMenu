@page
@model Web.Pages.Dish.DishRegisterModel
@{
    ViewData["Title"] = "Cadastre um prato";

    <link rel="stylesheet" href="~/css/dish/dish.css" asp-append-version="true" />

    <form method="post" enctype="multipart/form-data">
        <div class="img-header">
            <img src="~/images/celular-foto.png" width="600" height="500">
        </div>

        <section class="dr-header" margin-top:1px>
            <div class="form-group">
            <h1 class="display-1">Cadastre o novo prato:</h1>
                <div class="col-md-2">
                    <section>Nome </section>
                        <section> <input type="text" asp-for="DishRegister.Name" /> </section>
                </div>

                <div class="col-md-2">
                    <section>Descrição/Detalhes</section>
                    <section>
                        <input type="text" asp-for="DishRegister.Description" />
                    </section>
                </div>

                <div class="col-md-2">
                    <section> Preço </section>
                    <section>
                        <input type="number" step="any" asp-for="DishRegister.Price" />
                    </section>
                </div>

                <div>
                    <section class="col-md-2">
                        Selecione abaixo a imagem do seu prato:
                        <div class="col-md-5"><input type="file" asp-for="DishRegister.FileForm" /></div>
                    </section>
                </div>

                <section class="col-md-2">
                    <button type="submit">Salvar </button>
                </section>
            </div>
        </section>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="green">
            <p><strong>@TempData["Message"].ToString()</strong> </p>
        </div>
    }
}